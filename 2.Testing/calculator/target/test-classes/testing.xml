<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="CalculatorSuite" parallel="method">
        <test name="BasicOperationsTest">
            <groups>
                <run>
                    <include name="BasicOperations" />
                </run>
            </groups>
            <classes>
                <class name="com.example.CalculatorTest" />
